<p id="notice"><%= notice %></p>

<h1>Ciudades</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Pais</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ciudades.each do |ciudade| %>
      <tr>
        <td><%= ciudade.nombre %></td>
        <td><%= ciudade.estado.paise.nombre %></td>
        <td><%= ciudade.estado.nombre %></td>
        <td><%= link_to 'Show', ciudade %></td>
        <td><%= link_to 'Edit', edit_ciudade_path(ciudade) %></td>
        <td><%= link_to 'Destroy', ciudade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

